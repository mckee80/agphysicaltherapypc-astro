---
import { siteConfig } from '@/config/site';
import SEOHead from '@/components/seo/SEOHead.astro';
import JsonLd from '@/components/seo/JsonLd.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  noindex?: boolean;
  jsonLd?: object;
  type?: 'website' | 'article';
  publishedTime?: Date;
}

const {
  title = siteConfig.seo.defaultTitle,
  description = siteConfig.description,
  image = siteConfig.seo.defaultImage,
  canonicalUrl,
  noindex = false,
  jsonLd,
  type = 'website',
  publishedTime,
} = Astro.props;

const fullTitle =
  title === siteConfig.seo.defaultTitle
    ? title
    : siteConfig.seo.titleTemplate.replace('%s', title);
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead
      title={fullTitle}
      description={description}
      image={image}
      canonicalUrl={canonicalUrl}
      noindex={noindex}
      type={type}
      publishedTime={publishedTime}
    />
    <JsonLd data={jsonLd} />
  </head>
  <body class="font-sans">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-white focus:text-brand-navy focus:px-4 focus:py-2 focus:rounded focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-brand-sage"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
