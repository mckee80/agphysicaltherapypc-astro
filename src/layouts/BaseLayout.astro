---
import { siteConfig } from '@/config/site';
import SEOHead from '@/components/seo/SEOHead.astro';
import JsonLd from '@/components/seo/JsonLd.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  noindex?: boolean;
  jsonLd?: object;
  type?: 'website' | 'article';
  publishedTime?: Date;
}

const {
  title = siteConfig.seo.defaultTitle,
  description = siteConfig.seo.defaultDescription,
  image = siteConfig.seo.defaultImage,
  canonicalUrl,
  noindex = false,
  jsonLd,
  type = 'website',
  publishedTime,
} = Astro.props;

const fullTitle =
  title === siteConfig.seo.defaultTitle
    ? title
    : siteConfig.seo.titleTemplate.replace('%s', title);
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead
      title={fullTitle}
      description={description}
      image={image}
      canonicalUrl={canonicalUrl}
      noindex={noindex}
      type={type}
      publishedTime={publishedTime}
    />
    <JsonLd data={jsonLd} />
  </head>
  <body class="font-sans">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-white focus:text-brand-navy focus:px-4 focus:py-2 focus:rounded focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-brand-sage"
    >
      Skip to main content
    </a>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />

    <!-- Sticky Mobile CTA -->
    <div
      id="mobile-cta"
      class="fixed bottom-0 left-0 right-0 z-40 lg:hidden transition-transform duration-300"
      style="transform: translateY(100%);"
    >
      <div class="bg-brand-sage/95 backdrop-blur-sm px-4 py-3 shadow-[0_-2px_10px_rgba(0,0,0,0.1)]">
        <a
          href={siteConfig.bookingUrl}
          target="_blank"
          rel="noopener"
          class="block w-full text-center text-white font-semibold text-base py-2.5 bg-brand-sage-dark rounded-lg hover:bg-brand-navy transition-colors"
        >
          Book Online
        </a>
      </div>
    </div>

    <script>
      const mobileCta = document.getElementById('mobile-cta');

      function updateMobileCta() {
        if (!mobileCta) return;
        // Show after scrolling past 300px (past the hero area)
        if (window.scrollY > 300) {
          mobileCta.style.transform = 'translateY(0)';
        } else {
          mobileCta.style.transform = 'translateY(100%)';
        }
      }

      window.addEventListener('scroll', updateMobileCta, { passive: true });
    </script>
  </body>
</html>
