---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { siteConfig } from '@/config/site';
---

<BaseLayout
  title="Community Resources | Trusted Providers in San Diego"
  description="Trusted community resources recommended by Dr. Ashlee Gendron â€” lactation counselors, chiropractors, midwives, doulas, mental health therapists, and more in San Diego and North County."
>
  <!-- Hero Section -->
  <section class="pt-36 pb-16 bg-gradient-to-br from-brand-sage/10 to-transparent">
    <div class="container-max">
      <div class="max-w-3xl">
        <span class="section-label">Community</span>
        <h1 class="text-4xl md:text-5xl mb-6">Community Resources</h1>
        <p class="text-lg text-brand-navy-light mb-6">
          I believe in a team approach to your care. These are trusted providers I recommend to my clients throughout San Diego and North County.
        </p>
      </div>
    </div>
  </section>

  <!-- Resources Grid -->
  <section class="section-padding">
    <div class="container-max max-w-5xl">
      <div class="grid gap-12">

        <!-- Perinatal & Postnatal Fitness -->
        <div>
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-brand-sage/10 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-brand-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h2 class="text-2xl font-heading font-semibold text-brand-navy">Perinatal & Postnatal Fitness</h2>
          </div>
          <div class="grid gap-4">
            <div class="bg-white rounded-xl p-6 shadow-sm border border-brand-sage/15">
              <h3 class="font-semibold text-brand-navy mb-1">Erica Friedman</h3>
              <p class="text-sm text-brand-navy-light mb-3">Women's perinatal and postnatal fitness coach</p>
              <div class="flex flex-wrap gap-x-4 gap-y-1 text-sm">
                <a href="https://www.ericafriedmanwellness.com" target="_blank" rel="noopener" class="text-brand-sage hover:text-brand-sage-dark transition-colors">ericafriedmanwellness.com</a>
                <span class="text-brand-navy-light">IG: @ericafriedman_wellness</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Mental Health -->
        <div>
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-brand-sage/10 rounded-xl flex items-center justify-center">
