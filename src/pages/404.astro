---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { siteConfig } from '@/config/site';
---

<BaseLayout title="Page Not Found" noindex={true}>
  <section class="min-h-[70vh] flex items-center justify-center section-padding">
    <div class="text-center max-w-lg">
      <h1 class="text-6xl md:text-8xl font-heading text-brand-sage mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl mb-4">Page Not Found</h2>
      <p class="text-brand-navy-light mb-8">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/agphysicaltherapypc-astro/" class="btn btn-primary">
          Return Home
        </a>
        <a href={siteConfig.bookingUrl} target="_blank" rel="noopener" class="btn btn-outline">
          Book Online
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
