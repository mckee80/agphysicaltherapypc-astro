---
import { siteConfig } from '@/config/site';

const currentYear = new Date().getFullYear();
---

<footer class="bg-brand-navy text-white" role="contentinfo">
  <div class="container-max section-padding">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Brand -->
      <div>
        <img
          src="/agphysicaltherapypc-astro/images/logo.png"
          alt={siteConfig.name}
          class="h-12 w-auto mb-4 brightness-0 invert"
          width="120"
          height="48"
          loading="lazy"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
        />
        <div class="hidden mb-4">
          <span class="font-heading text-xl font-semibold text-white block">Ashlee Gendron</span>
          <span class="font-sans text-xs text-white/70 uppercase tracking-widest block">Physical Therapy PC</span>
        </div>
        <p class="text-white/70 text-base mb-4 max-w-xs">
          Helping women reclaim their passions without leakage or pain.
        </p>
        <p class="text-sm text-white/60 mb-4">
          {siteConfig.provider.name}, {siteConfig.provider.credentials}
        </p>
        <div class="flex items-center gap-4">
          <a href={siteConfig.social.facebook} target="_blank" rel="noopener" aria-label="Facebook" class="text-white/60 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
            </svg>
          </a>
          <a href={siteConfig.social.instagram} target="_blank" rel="noopener" aria-label="Instagram" class="text-white/60 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
            </svg>
          </a>
          <a href={siteConfig.social.yelp} target="_blank" rel="noopener" aria-label="Yelp" class="text-white/60 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.16 12.594l-4.995 1.433c-.96.276-1.74-.8-1.176-1.63l2.996-4.404c.564-.83 1.823-.54 1.934.447l.487 4.33c.06.535-.305 1.024-.82 1.16l-.426.664zm-8.127 5.627l1.56-4.96c.3-.953 1.637-1.1 2.023-.222l2.042 4.636c.386.878-.383 1.82-1.18 1.447l-4.28-2.003c-.42-.197-.56-.7-.165-.898zm-3.2-2.18l-3.46-3.755c-.67-.728-.097-1.91.88-1.816l5.14.497c.975.095 1.325 1.32.53 1.853l-2.33 1.61c-.38.264-.76.072-.76-.389zm-1.565-7.989l4.953 1.568c.958.303 1.058 1.63.15 2.07l-4.79 2.313c-.91.44-1.89-.358-1.506-1.226l2.06-4.18c.2-.407.71-.618 1.133-.545zm4.703-5.77l.164 5.193c.032 1.005-1.16 1.546-1.803.818L6.72 4.456c-.643-.728-.038-1.863.928-1.743l4.83.598c.52.064.905.47.894.97z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {siteConfig.navigation.footer.quickLinks.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-white/70 text-base hover:text-white transition-colors"
                {...(item.href.startsWith('http') && { target: '_blank', rel: 'noopener' })}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-4">Contact</h3>
        <address class="not-italic text-white/70 text-base space-y-2">
          <p>{siteConfig.contact.address.street}</p>
          <p>{siteConfig.contact.address.city}, {siteConfig.contact.address.state} {siteConfig.contact.address.zip}</p>
          <p class="pt-2">
            <a
              href={`tel:${siteConfig.contact.phone.primary}`}
              class="hover:text-white transition-colors font-medium"
            >
              {siteConfig.contact.phone.formatted}
            </a>
          </p>
          <p>
            <a
              href={`mailto:${siteConfig.contact.email}`}
              class="hover:text-white transition-colors"
            >
              {siteConfig.contact.email}
            </a>
          </p>
          <p class="text-sm">{siteConfig.contact.hours.full}</p>
        </address>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="bg-black/30 py-4">
    <div class="container-max text-center">
      <p class="text-white/50 text-sm mb-2">
        &copy; {currentYear} {siteConfig.name}. All rights reserved.
      </p>
      <p class="text-xs text-white/40">
        Proudly serving {siteConfig.serviceAreas.join(', ')}
      </p>
    </div>
  </div>
</footer>
