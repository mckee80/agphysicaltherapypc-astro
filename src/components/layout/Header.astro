---
import { siteConfig } from '@/config/site';

const navigation = siteConfig.navigation.main;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-surface-warm/95 backdrop-blur-sm transition-all duration-300" id="header">
  <!-- Top bar with phone -->
  <div class="bg-brand-navy text-white py-2">
    <div class="container-max flex justify-between items-center text-sm">
      <a
        href={`tel:${siteConfig.contact.phone.primary}`}
        class="hover:text-brand-sage-light transition-colors flex items-center gap-2"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <span class="sr-only">Call us at </span>{siteConfig.contact.phone.formatted}
      </a>
      <span class="hidden md:inline text-brand-sage-light font-medium">
        Pelvic Health Specialist | Vista & North County San Diego
      </span>
      <span class="text-gray-300 hidden sm:inline">
        Clinic: Wed & Fri 9am-1pm | Home visits: Tue-Fri
      </span>
    </div>
  </div>

  <div class="container-max">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/agphysicaltherapypc-astro/" class="flex items-center gap-3">
        <img
          src="/agphysicaltherapypc-astro/images/logo.png"
          alt={siteConfig.name}
          class="h-14 w-auto"
          width="140"
          height="56"
          onerror="this.style.display='none';"
        />
        <div class="flex flex-col">
          <span class="font-heading text-lg md:text-xl font-semibold text-brand-navy leading-tight">AG Physical Therapy</span>
          <span class="font-sans text-[10px] md:text-xs text-brand-navy-light uppercase tracking-widest">Pelvic Health & Orthopedics</span>
        </div>
      </a>

      <!-- Mobile menu button -->
      <button
        class="lg:hidden flex flex-col justify-center w-8 h-8 bg-transparent border-0 cursor-pointer"
        aria-label="Toggle navigation"
        aria-expanded="false"
        data-nav-toggle
      >
        <span class="hamburger block w-full h-0.5 bg-brand-navy transition-all relative before:content-[''] before:absolute before:left-0 before:-top-2 before:w-full before:h-0.5 before:bg-brand-navy before:transition-all after:content-[''] after:absolute after:left-0 after:top-2 after:w-full after:h-0.5 after:bg-brand-navy after:transition-all"></span>
      </button>

      <!-- Desktop navigation -->
      <ul class="hidden lg:flex items-center gap-8" role="menubar">
        {navigation.map((item) => (
          <li role="none">
            <a
              href={item.href}
              class="nav-link text-sm font-medium text-brand-navy uppercase tracking-wide relative hover:text-brand-sage transition-colors after:content-[''] after:absolute after:-bottom-1 after:left-0 after:w-0 after:h-0.5 after:bg-brand-sage after:transition-all hover:after:w-full"
              role="menuitem"
            >
              {item.name}
            </a>
          </li>
        ))}
        <li role="none">
          <a
            href={siteConfig.bookingUrl}
            target="_blank"
            rel="noopener"
            class="btn btn-primary"
            role="menuitem"
          >
            Book Online
          </a>
        </li>
      </ul>

      <!-- Mobile navigation -->
      <ul
        class="nav-menu fixed top-[104px] left-0 right-0 bg-white flex-col p-8 gap-4 shadow-lg transform -translate-y-full opacity-0 invisible transition-all duration-300 lg:hidden"
        data-nav-menu
        role="menu"
      >
        {navigation.map((item) => (
          <li role="none">
            <a
              href={item.href}
              class="block py-2 text-brand-navy font-medium text-sm uppercase tracking-wide hover:text-brand-sage transition-colors"
              role="menuitem"
            >
              {item.name}
            </a>
          </li>
        ))}
        <li role="none">
          <a
            href={siteConfig.bookingUrl}
            target="_blank"
            rel="noopener"
            class="btn btn-primary inline-block mt-2"
            role="menuitem"
          >
            Book Online
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .nav-menu.active {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  [data-nav-toggle][aria-expanded="true"] .hamburger {
    background-color: transparent;
  }

  [data-nav-toggle][aria-expanded="true"] .hamburger::before {
    top: 0;
    transform: rotate(45deg);
  }

  [data-nav-toggle][aria-expanded="true"] .hamburger::after {
    top: 0;
    transform: rotate(-45deg);
  }

  .header.scrolled {
    @apply shadow-sm;
  }
</style>

<script>
  const toggle = document.querySelector('[data-nav-toggle]');
  const menu = document.querySelector('[data-nav-menu]');
  const header = document.getElementById('header');

  toggle?.addEventListener('click', () => {
    const isOpen = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!isOpen));
    menu?.classList.toggle('active');
  });

  // Close menu when clicking a link
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      toggle?.setAttribute('aria-expanded', 'false');
      menu?.classList.remove('active');
    });
  });

  // Add scrolled class on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });
</script>
